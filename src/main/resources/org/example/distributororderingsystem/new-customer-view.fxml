<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.distributororderingsystem.NewCustomerController" hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" promptText="Name"/>
    <TextField fx:id="addressField" GridPane.rowIndex="1" GridPane.columnIndex="1" promptText="Address"/>
    <TextField fx:id="phoneField" GridPane.rowIndex="2" GridPane.columnIndex="1" promptText="Phone"/>
    <Button text="Add Customer" GridPane.rowIndex="3" GridPane.columnIndex="1" onAction="#onAddCustomerButtonClick"/>
    <Button fx:id="backButton" text="Back" onAction="#onBackButtonClick" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
</GridPane>
